@model List<ECommerceProject.Entities.Product>
@using ECommerceProject.Context
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Çok Satanlar</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            font-family: Arial, sans-serif;
            padding: 0;
        }

        /* Banner */
        .page-banner {
            background: linear-gradient(to right, #1f2a40, #3e4b60);
            color: white;
            text-align: center;
            padding: 40px 0;
            margin-bottom: 30px;
        }

        .filters {
            margin: 20px;
            display: flex;
            gap: 20px;
        }

            .filters select {
                padding: 8px 12px;
                font-size: 16px;
            }

        .product-list {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            justify-content: center;
            padding: 20px;
        }

        .product-item {
            border: 1px solid #ddd;
            padding: 15px;
            width: 220px;
            position: relative;
            cursor: pointer;
            transition: transform 0.3s ease;
        }

            .product-item img {
                width: 100%;
            }

            .product-item:hover {
                transform: scale(1.05);
            }

        /* Modal Özelleştirmesi */
        .modal-lg {
            max-width: 900px;
        }

        .modal-content {
            display: flex;
            flex-direction: row;
        }

        .modal-body {
            display: flex;
            padding: 0;
        }

        .modal-left {
            flex: 1;
            background-color: #f8f9fa;
            display: flex;
            align-items: center;
            justify-content: center;
        }

            .modal-left img {
                max-width: 100%;
                height: auto;
            }

        .modal-right {
            flex: 1;
            padding: 30px;
        }

            .modal-right h4 {
                font-size: 24px;
                font-weight: bold;
                margin-bottom: 15px;
            }

            .modal-right p {
                font-size: 16px;
                margin-bottom: 10px;
            }

            .modal-right .price {
                font-size: 20px;
                color: green;
                font-weight: bold;
            }

        /* Navbar */
        .header__top {
            background-color: #f1f1f1;
        }

            .header__top ul {
                list-style: none;
                padding: 0;
                margin: 0;
            }

            .header__top li {
                display: inline;
                margin-right: 15px;
            }

        .navbar ul {
            list-style: none;
            padding-left: 0;
            margin-bottom: 0;
        }

            .navbar ul li {
                display: inline;
            }

                .navbar ul li a {
                    text-decoration: none;
                    color: black;
                    font-weight: bold;
                }

        /* Sosyal ikonlar ve Giriş Yap linki */
        .header__top a {
            color: black;
            text-decoration: none;
        }

            /* İkonlar arasında boşluk */
            .header__top a i {
                color: black;
                margin-right: 10px;
                font-size: 18px;
                vertical-align: middle;
            }

        /* İkonların bulunduğu container içindeki linkler arası boşluk */
        .header__top > div > div:first-child a {
            margin-right: 15px;
        }

        /* Giriş Yap linkindeki ikon ve metin hizalama */
        .header__top > div > div:last-child a i {
            margin-right: 6px;
            font-size: 16px;
            vertical-align: middle;
        }
    </style>
</head>
<body>

    <!-- Navbar Başlangıç -->
    <header id="navbar" class="header">
        <div class="header__top py-2">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-lg-6 col-md-6">
                        <ul class="list-inline mb-0">
                            <li class="list-inline-item"><i class="fa fa-envelope"></i> velurium@gmail.com</li>
                            <li class="list-inline-item">500 TL ve üzeri kargo bedava!</li>
                        </ul>
                    </div>
                    <div class="col-lg-6 col-md-6 text-end">
                        <div class="d-flex justify-content-end align-items-center gap-3">
                            <div>
                                <a href="#"><i class="fab fa-facebook-f"></i></a>
                                <a href="#"><i class="fab fa-twitter"></i></a>
                                <a href="#"><i class="fab fa-linkedin-in"></i></a>
                                <a href="#"><i class="fab fa-pinterest-p"></i></a>
                            </div>
                            <div>Türkçe</div>
                            <div>
                                <a href="#"><i class="fa fa-user"></i> Giriş Yap</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="container py-3">
            <div class="row align-items-center">
                @*<div class="col-lg-2 col-6">
                        <a href="/">
                            <img src="~/ogani-master/ogani-master/img/logo.png" alt="VELURIUM Logo" />
                        </a>
                    </div>*@
                <div class="col-lg-8 text-center">
                    <nav class="navbar">
                        <ul class="list-inline">
                            <li class="list-inline-item mx-3"><a href="/Default/Index/">Anasayfa</a></li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </header>
    <!-- Navbar Bitiş -->
    <!-- Sayfa Banner -->
    <div class="page-banner">
        <h1>Çok Satanlar</h1>
    </div>

    <!-- Filtre Alanı -->
    <div class="filters container">
        <select id="categoryFilter" class="form-select w-auto">
            <option value="">Kategori Seçiniz</option>
            <option value="Kadın">Kadın</option>
            <option value="Erkek">Erkek</option>
            <option value="Çocuk">Çocuk</option>
        </select>

        <input type="text" id="nameFilter" placeholder="Ürün adına göre filtrele" class="form-control w-50" />
    </div>

    <!-- Ürün Listesi -->
    <div id="productList" class="product-list">
        @foreach (var product in Model)
        {
            <div class="product-item"
                 data-category="@product.Category.CategoryName"
                 data-name="@product.Name"
                 data-description="@product.Description"
                 data-price="@product.Price.ToString("C")"
                 data-image="@product.ImageUrl">
                <img src="@product.ImageUrl" alt="@product.Name" />
                <div class="product-info text-center mt-2">
                    <h6>@product.Name</h6>
                    <p class="price">@product.Price.ToString("C")</p>
                </div>
            </div>
        }
    </div>

    <!-- Modal -->
    <div class="modal fade" id="productModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-body">
                    <div class="modal-left p-4">
                        <img id="modalImage" src="" alt="Ürün Resmi" />
                    </div>
                    <div class="modal-right">
                        <h4 id="modalName"></h4>
                        <p id="modalDescription"></p>
                        <p class="price" id="modalPrice"></p>
                        <p><strong>Bedenler:</strong> S, M, L, XL</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const categoryFilter = document.getElementById('categoryFilter');
        const nameFilter = document.getElementById('nameFilter');
        const productItems = document.querySelectorAll('.product-item');

        function filterProducts() {
            const selectedCategory = categoryFilter.value.toLowerCase();
            const nameSearch = nameFilter.value.toLowerCase();

            productItems.forEach(item => {
                const category = item.dataset.category.toLowerCase();
                const name = item.dataset.name.toLowerCase();

                const categoryMatch = !selectedCategory || category === selectedCategory;
                const nameMatch = !nameSearch || name.includes(nameSearch);

                item.style.display = categoryMatch && nameMatch ? 'block' : 'none';
            });
        }

        categoryFilter.addEventListener('change', filterProducts);
        nameFilter.addEventListener('input', filterProducts);

        // Modal açma
        const modal = new bootstrap.Modal(document.getElementById('productModal'));

        productItems.forEach(item => {
            item.addEventListener('click', () => {
                document.getElementById('modalImage').src = item.dataset.image;
                document.getElementById('modalName').innerText = item.dataset.name;
                document.getElementById('modalDescription').innerText = item.dataset.description;
                document.getElementById('modalPrice').innerText = item.dataset.price;
                modal.show();
            });
        });
    </script>

</body>
</html>
