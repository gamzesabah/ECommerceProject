@model List<ECommerceProject.Entities.Category>

<section class="categories">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="categories__slider owl-carousel">
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <div class="categories__item set-bg" data-setbg="@item.ImageUrl">
                                <h5><a href="#">@item.CategoryName</a></h5>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-muted">Gösterilecek kategori bulunamadı.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
