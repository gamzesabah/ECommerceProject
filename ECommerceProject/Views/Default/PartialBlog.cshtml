@model List<ECommerceProject.Entities.Blog>

<section id="blog" class="from-blog spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title from-blog__title">
                    <h2>Blog</h2>
                </div>
            </div>
        </div>
        <div class="row">
            @if (Model != null && Model.Any())
            {
                foreach (var item in Model)
                {
                    <div class="col-lg-4 col-md-4 col-sm-6">
                        <div class="blog__item">
                            <div class="blog__item__pic">
                                <img src="@item.ImageUrl" alt="@item.Title" style="width: 100%; height: auto;">
                            </div>
                            <div class="blog__item__text">
                                <h4>@item.Title</h4>
                                <h6>@item.Subtitle</h6>
                                <p>@item.Description</p>
                                <a href="#" class="blog__readmore">Devamını Oku</a>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-12 text-center text-muted">
                    <p>Gösterilecek blog bulunamadı.</p>
                </div>
            }
        </div>
    </div>
</section>

