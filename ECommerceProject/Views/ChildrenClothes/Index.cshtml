@model List<ECommerceProject.Entities.Product>

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Çocuk Kıyafetleri</title>

    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            font-family: 'Comic Sans MS', cursive, sans-serif;
            background: linear-gradient(120deg, #f0f8ff, #ffe4e1);
            padding: 0;
        }

        .header__top a {
            color: black;
            text-decoration: none;
            margin-right: 15px;
        }

            .header__top a i {
                color: black;
                margin-right: 8px;
            }

        .page-banner {
            background: linear-gradient(to right, #ff69b4, #ff85c1);
            color: white;
            text-align: center;
            padding: 40px 0;
            margin-bottom: 30px;
            font-weight: 900;
            font-size: 32px;
            text-shadow: 2px 2px 4px #a6004a;
        }

        .filters {
            margin: 20px auto;
            max-width: 600px;
            display: flex;
            gap: 15px;
            justify-content: center;
        }

            .filters select {
                padding: 10px;
                font-size: 16px;
                border: 2px solid #ff69b4;
                border-radius: 8px;
                background-color: white;
                color: #ff1493;
                font-weight: 600;
                cursor: pointer;
            }

                .filters select:hover {
                    background-color: #ffe4e1;
                }

        .product-list {
            display: flex;
            flex-wrap: wrap;
            gap: 25px;
            justify-content: center;
            padding: 20px;
        }

        .product-item {
            border-radius: 12px;
            box-shadow: 0 6px 15px rgba(255, 105, 180, 0.4);
            padding: 15px;
            width: 220px;
            background: white;
            cursor: pointer;
            transition: transform 0.3s ease;
            text-align: center;
        }

            .product-item:hover {
                transform: scale(1.07);
            }

            .product-item img {
                width: 100%;
                border-radius: 10px;
            }

        .product-info h6 {
            color: #ff1493;
            font-weight: 700;
            margin-top: 10px;
        }

        .product-info .price {
            color: #ff69b4;
            font-weight: 700;
            font-size: 18px;
        }

        /* Modal */
        .modal-lg {
            max-width: 700px;
        }

        .modal-content {
            display: flex;
            flex-direction: row;
            border-radius: 15px;
        }

        .modal-body {
            display: flex;
            padding: 0;
        }

        .modal-left {
            flex: 1;
            background-color: #ffe4e1;
            display: flex;
            align-items: center;
            justify-content: center;
            border-top-left-radius: 15px;
            border-bottom-left-radius: 15px;
        }

            .modal-left img {
                max-width: 100%;
                height: auto;
                border-radius: 15px 0 0 15px;
            }

        .modal-right {
            flex: 1;
            padding: 25px 30px;
            background-color: #fff0f5;
            border-top-right-radius: 15px;
            border-bottom-right-radius: 15px;
        }

            .modal-right h4 {
                color: #ff1493;
                font-weight: 900;
                margin-bottom: 15px;
                font-size: 26px;
            }

            .modal-right p {
                font-size: 16px;
                margin-bottom: 12px;
                color: #c71585;
            }

            .modal-right .price {
                font-size: 22px;
                color: #ff1493;
                font-weight: bold;
                margin-bottom: 20px;
            } 
        body {
            background-image: url(/ogani-master/ogani-master/img/ışıltı.png); /* kendi görsel yolunu yaz */
            background-repeat: repeat; /* tekrar etmesini sağlar */
            background-size: 150px 150px; /* boyutunu büyütmek için */
            background-position: top left;
        }

        /* Navbar üst kısım */
        header.header__top {
            padding: 10px 0;
            background-color: #f8f9fa;
        }

            header.header__top .container {
                display: flex;
                justify-content: space-between;
                align-items: center;
                font-size: 14px;
                color: #333;
            }

                header.header__top .container a {
                    text-decoration: none;
                    color: black;
                    margin-left: 10px;
                }

                    header.header__top .container a:hover {
                        text-decoration: underline;
                    }

        nav.navbar ul {
            list-style: none;
            padding: 0;
            margin: 0;
            display: flex;
            justify-content: center;
            background: transparent;
        }

            nav.navbar ul li {
                margin: 0 15px;
            }

                nav.navbar ul li a {
                    color: #ff1493;
                    font-weight: 700;
                    text-decoration: none;
                }

                    nav.navbar ul li a:hover {
                        text-decoration: underline;
                    }
    </style>
</head>
<body>

    <header class="header__top py-2 bg-light">
        <div class="container d-flex justify-content-between align-items-center">
            <div>
                <i class="fa fa-envelope"></i> velurium@gmail.com
                <span class="ms-3">500 TL ve üzeri kargo bedava!</span>
            </div>
            <div class="d-flex align-items-center">
                <a href="#"><i class="fab fa-facebook-f"></i></a>
                <a href="#"><i class="fab fa-twitter"></i></a>
                <a href="#"><i class="fab fa-linkedin-in"></i></a>
                <a href="#"><i class="fab fa-pinterest-p"></i></a>
                <div class="ms-3 me-3">Türkçe</div>
                <a href="#"><i class="fa fa-user"></i> Giriş Yap</a>
            </div>
        </div>
        <div class="col-lg-8 text-center">
            <nav class="navbar">
                <ul class="list-inline">
                    <li class="list-inline-item mx-3"><a href="/Default/Index/">Anasayfa</a></li>
                </ul>
            </nav>
        </div>
    </header>

    <div class="page-banner">
        Çocuk Kıyafetleri
    </div>

    <div class="filters">
        <select id="categoryFilter" class="form-select w-auto">
            <option value="">Kategori Seçiniz</option>
            <option value="Gömlek">Gömlek</option>
            <option value="Tişört">Tişört</option>
            <option value="Ceket">Ceket</option>
            <option value="Pantolon">Pantolon</option>
        </select>
    </div>

    <div id="productList" class="product-list container">
        @foreach (var product in Model)
        {
            <div class="product-item"
                 data-category="@product.Category.CategoryName"
                 data-name="@product.Name"
                 data-description="@product.Description"
                 data-price="@product.Price.ToString("C")"
                 data-image="@product.ImageUrl">
                <img src="@product.ImageUrl" alt="@product.Name" />
                <div class="product-info">
                    <h6>@product.Name</h6>
                    <p class="price">@product.Price.ToString("C")</p>
                </div>
            </div>
        }
    </div>

    <!-- Modal -->
    <div class="modal fade" id="productModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-body">
                    <div class="modal-left p-3">
                        <img id="modalImage" src="" alt="Ürün Resmi" />
                    </div>
                    <div class="modal-right">
                        <h4 id="modalName"></h4>
                        <p id="modalDescription"></p>
                        <p class="price" id="modalPrice"></p>
                        <p><strong>Bedenler:</strong> S, M, L, XL</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const categoryFilter = document.getElementById('categoryFilter');
        const productItems = document.querySelectorAll('.product-item');

        function filterProducts() {
            const selectedCategory = categoryFilter.value.toLowerCase();

            productItems.forEach(item => {
                const category = item.dataset.category.toLowerCase();

                const categoryMatch = !selectedCategory || category === selectedCategory;

                item.style.display = categoryMatch ? 'block' : 'none';
            });
        }

        categoryFilter.addEventListener('change', filterProducts);

        // Modal açma
        const modal = new bootstrap.Modal(document.getElementById('productModal'));

        productItems.forEach(item => {
            item.addEventListener('click', () => {
                document.getElementById('modalImage').src = item.dataset.image;
                document.getElementById('modalName').innerText = item.dataset.name;
                document.getElementById('modalDescription').innerText = item.dataset.description;
                document.getElementById('modalPrice').innerText = item.dataset.price;
                modal.show();
            });
        });
    </script>

</body>
</html>
